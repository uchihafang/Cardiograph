<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnStop"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_toRightOf="@+id/btnStart"
        android:onClick="onBtnStopClick"
        android:text="Stop" />

    <TextView
        android:id="@+id/editView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:text="@string/hello_world"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_alignLeft="@+id/btnUserName"
        android:onClick="onBtnStartClick"
        android:text="Start" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/btnUserName"
        android:layout_below="@+id/btnUserName"
        android:maxHeight="50dip"
        android:maxWidth="1000dip" />

    <Button
        android:id="@+id/btnUserName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="UserName" />

</RelativeLayout>
